{% extends "::front.html.twig" %}
{% block wrapper %}
    <!-- <div class="layout-app">  -->
    <div class="innerAll">
    <!-- Widget -->
    <div class="widget widget-messages widget-heading-simple widget-body-white">
    <div class="widget-body padding-none margin-none">

    <div class="row row-merge borders">
    <div class="col-md-3 listWrapper">
        <div class="innerAll">
            <form autocomplete="off" class="form-inline margin-none">
                <div class= input-group input-group-sm">
                    <input type="text" class="form-control" placeholder="Find messages .." />
								<span class="input-group-btn">
									<button type="button" class="btn btn-primary btn-xs pull-right"><i class="fa fa-search"></i></button>
								</span>
                </div>
            </form>
        </div>
        <div class="bg-gray text-center strong border-top innerAll half"> {% if messages | length != 0 %}
                This conversation contains {{ messages | length }}
            {% else %}Select conversation to send
            {% endif %}
            messages <i class="fa fa-circle-arrow-down"></i></div>
        <ul class="list-unstyled">
            {{ render(controller('BionicUniversityMessageBundle:Front/Message:recentConversation')) }}
        </ul>
    </div>
    <div class="col-md-9 detailsWrapper">

        {% if null != interlocutor %}
        <!-- User -->
        <div class="bg-primary">
            <div class="media">
                <a href="" class="pull-left">
                    <img src="{{ interlocutor.avatar }}" width="65" class="media-object">
                </a>
                <div class="media-body innerTB innerR">
                    <div class="innerT half pull-right">
                        <a  href="#type" class=" btn btn-default bg-white btn-sm" data-toggle="collapse">
                            <i class="fa fa-pencil"></i> Send
                        </a>
                    </div>
                    <h4 href="" class="text-white pull-left innerAll strong display-block margin-none">{{ interlocutor | raw}}</h4>


                </div>

            </div>
        </div>
        <div class="bg-gray innerAll text-center margin-none"></div>
        <div  id="type" class="border-top">
            <textarea type="text" class="form-control rounded-none border-none" placeholder="Write your messages..."></textarea>
        </div>

        <div class="widget border-top padding-none margin-none">

            {% for message in messages %}
            <!--  Message -->
            <div class="media margin-none innerAll">
                <a href="" class="pull-left hidden-xs">
                    <img src="{{ message.fromUser.avatar }}" width="60" class="media-object">
                </a>
                <div class="media-body innerTB">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="innerT half">
                                <div class="media">
                                    <div class="pull-left">
                                        <a href="" class="strong text-inverse ">{{ message.fromUser }}</a>
                                        <span class="innerR text-muted visible-xs"></span>
                                    </div>
                                    <div class="media-body">
                                        {{ message.body | raw }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6 hidden-xs">
                            <i class="icon-time-clock pull-right text-muted innerT half fa fa-2x"></i>
										<span class="pull-right innerR innerT text-right  text-muted">
										{% if message.isread == '1' %} read {% else %} unread {% endif %}
                                        {{ message.createdAt | date ('h:i d/m/Y')}}
										</span>
                        </div>
                    </div>
                </div>

            </div>
            {% endfor %}
        </div>
        {% else %}
            <div class="bg-gray innerAll text-center margin-none">Please choose conversation</div>
        {% endif %}
    </div>

    </div>
    </div>
    </div>
    <!-- // Widget END -->

    </div>
{% endblock %}