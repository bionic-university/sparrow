{% extends "::front.html.twig" %}
    {% block heading_profile %}
        {{ entity.firstName }}
        {{ entity.lastName }}
    {% endblock heading_profile %}
    {% block profile %}
       
        <div class="row">
            <aside class="avatar col-md-2">
            </aside>
            <section class="col-md-10" >
                <ul class="list">
                    <li class="list-item">{{ entity.position}}</li>
                    <li class="list-item">{{ entity.gender}}</li>
                    <li class="list-item">{{ entity.department}}</li>
                </ul>
            </section>
        </div>
    {% endblock profile %}
    {% block heading_wall %}
        <h1>My blog</h1>
        <div>
            <ul>
                {% for post_body in post %}
                    <div class="">
                        <div class="">
                            <li class="">{{ post_body.text }}</li>
                        </div>
                    </div>
                {% endfor %}
            </ul>
        </div>
    {% endblock heading_wall %}


