
{% block recent_news %}

    <div class="widget">
        <h5 class="innerAll margin-none border-bottom bg-gray">Sparrow News </h5>
        <div class="widget-body padding-none">
    {% if articles != null %}
        {%  for article in articles %}
                <div class="media border-bottom innerAll margin-none">
                    <img src="../assets/images/people/35/22.jpg" class="pull-left media-object">
                    <div class="media-body">
                        <a href="" class="pull-right text-muted innerT half"></a>
                        <h5 class="margin-none"><a href="" class="text-inverse">{{ article.title }}</a></h5>
                        <small>on {{ article.createdAt |date }} </small>
                    </div>
                </div>

            
        {% endfor %}
    {% else %}
        <div class="media border-bottom innerAll margin-none">
            <h5 class="margin-none"><a href="" class="text-inverse">Have nothing</a></h5>
        </div>
        {% endif %}
        </div>
    </div>
{% endblock recent_news %}